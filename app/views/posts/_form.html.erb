<%= form_for(@post) do |p| %>
  <div class="row">
    <div class="input-field">
      <i class="material-icons prefix">subject</i></br>
      <%= p.label :title %>
      <%= p.text_field :name %>
    </div>
  </div>
  <div class="row">
    <div class="input-field">
      <i class="material-icons prefix">comment</i>
      <%= p.label :body %>
      <%= p.text_area :body, size: "20x30" %>
    </div>
  </div>
  <div class="row">
    <div class="actions post-submit-btn">
      <%= p.submit "submit", class: "btn btn-default btn-primary" %>
    </div>
  </div>
<% end %>
