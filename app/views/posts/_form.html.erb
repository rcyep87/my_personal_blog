<%= form_for :post do |p| %>
  <div class="row col s3">
    <div class="input-field">
      <i class="material-icons prefix">subject</i>
      <%= p.label :title %>
      <%= p.text_field :name %>
    </div>
    <div class="input-field">
      <i class="material-icons prefix">comment</i>
      <%= p.label :body %>
      <%= p.text_area :body %>
    </div>
    <div class="actions">
      <%= p.submit "submit", class: "btn btn-default btn-primary" %>
    </div>
  </div>
<% end %>
